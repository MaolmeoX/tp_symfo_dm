{% extends 'base.html.twig' %}

{% block body %}
    <h1>Diseases list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Effect</th>
                <th>Ismortal</th>
                <th>Traitement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for disease in diseases %}
            <tr>
                <td><a href="{{ path('disease_show', { 'id': disease.id }) }}">{{ disease.id }}</a></td>
                <td>{{ disease.name }}</td>
                <td>{{ disease.effect }}</td>
                <td>{% if disease.isMortal %}Yes{% else %}No{% endif %}</td>
                <td>{{ disease.traitement }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('disease_show', { 'id': disease.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('disease_edit', { 'id': disease.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('disease_new') }}">Create a new disease</a>
        </li>
    </ul>
{% endblock %}
